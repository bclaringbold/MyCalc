<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.claringbold.brad.mycalc.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoutput"
        android:allowUndo="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button0"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button1"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:layout_below="@+id/button5"
        android:layout_toEndOf="@+id/button1"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:layout_below="@+id/button6"
        android:layout_toEndOf="@+id/button2"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@+id/button7"
        android:layout_toStartOf="@+id/button8"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button4"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button5"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:width="50dp"
        android:height="50dp"
        android:layout_below="@+id/buttonclear"
        android:layout_alignParentStart="true"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:layout_above="@+id/button4"
        android:layout_toEndOf="@+id/button7"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/button8"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/buttonequal"
        android:layout_alignTop="@+id/buttondecimal"
        android:layout_alignEnd="@+id/buttonadd"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignBottom="@+id/buttondecimal"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/buttondecimal"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button0"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/buttondivide"
        android:layout_above="@+id/buttonmultiply"
        android:layout_toEndOf="@+id/button9"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/buttonmultiply"
        android:layout_alignTop="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/buttonsubtract"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button6"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/buttonadd"
        android:layout_below="@+id/button6"
        android:layout_toEndOf="@+id/button3"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/buttonclear"
        android:minHeight="80dp"
        android:layout_below="@+id/textoutput"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button9"
        android:textSize="40dp" />

</RelativeLayout>
